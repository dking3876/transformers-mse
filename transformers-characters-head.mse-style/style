extra card field:
	type: choice
	name: underlay layer
	choice: normal
	editable: false

extra card style:
	underlay layer:
		left: 0
		top : 0
		width: { if styling.underlayer=="no" then 0 else 750 }
		height: { if styling.underlayer=="no" then 0 else 1050 }
